{
    "manifest_version": 2,
    "name": "MediaExtractor",
    "description": "Extract url from request with media file extension to clipboard",
    "version": "1.1.0",
    "icons": {
        "24": "/assets/icon/icon-dark.svg"
    },
    "background": {
        "scripts": [
            "/js/settings.js",
            "/js/util.js",
            "/js/main.js"
        ]
    },
    "browser_action": {
        "browser_style": true,
        "default_popup": "/html/options.html",
        "default_icon": {
            "24": "/assets/icon/icon-dark.svg"
        },
        "theme_icons": [
            {
                "light": "/assets/icon/icon-light.svg",
                "dark": "/assets/icon/icon-dark.svg",
                "size": 24
            }
        ]
    },
    "options_ui": {
        "page": "/html/options.html",
        "open_in_tab": true
    },
    "permissions": [
        "<all_urls>",
        "webRequest",
        "webRequestBlocking",
        "tabs",
        "storage",
        "clipboardWrite"
    ],
    "applications": {
        "gecko": {
            "id": "mediaextractor@example.com"
        }
    }
}